        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <local:RhombusControl Header="с нг" Description="Пусть Новый год ворвётся в жизнь сказкой, полной уюта, тепла и благополучия!" ColoredSource="Resources/1.jpg" Width="292"/>
